@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">

    <div class="col-10">

        <div class="alert alert-info" role="alert">
            CRUD Empregados
        </div>
        <button type="button" class="btn btn-success btn-sm botao-novo-empregado">Novo Empregado</button>

        <table class="table table-striped" id="tableEmpregados">
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Departamento</th>
                    <th>Saldo</th>
                    <th>Fecha Contrato</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalEmpregado" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Empregado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label">Nome Completo</label>
                    <input type="text" class="form-control" id="txtNomeCompleto" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">Departamento</label>
                    <select class="form-select" id="cboDepartamento"></select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Saldo</label>
                    <input type="number" class="form-control" id="txtSaldo">
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha Contrato</label>
                    <input type="text" class="form-control" id="txtFechaContrato">
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary botao-guarda-empregado">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/index.js"></script>
}